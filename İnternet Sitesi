<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    "use strict";

    // Gerekli elementleri seÃ§elim
    const btnEkle = document.getElementById("btnEkle");
    const ulkeInput = document.getElementById("ulkeInput");
    const mevsimInput = document.getElementById("mevsimInput");
    const liste = document.getElementById("eklenenlerListesi");

    // Ekle Butonuna TÄ±klama OlayÄ±
    btnEkle.addEventListener("click", function() {
        // DeÄŸerleri al
        const ulke = ulkeInput.value.trim();
        const mevsim = mevsimInput.value;

        // BoÅŸ kontrolÃ¼ yap
        if (ulke === "" || mevsim === "") {
            alert("LÃ¼tfen hem Ã¼lke ismini girin hem de bir mevsim seÃ§in!");
            return;
        }

        // Benzersiz bir ID oluÅŸtur (Silme iÅŸlemi iÃ§in gerekli)
        const id = Date.now();

        // Yeni liste elemanÄ± HTML'i
        const yeniSatir = `
            <li class="list-group-item d-flex justify-content-between align-items-center" id="kayit-${id}">
                <span>
                    <i class="fa-solid fa-earth-americas text-primary me-2"></i> 
                    <strong>${ulke}</strong> - ${mevsim} Mevsimi
                </span>
                <button class="btn btn-danger btn-sm" onclick="sil(${id})">
                    <i class="fa-solid fa-trash-can"></i> Sil
                </button>
            </li>
        `;

        // Listeye ekle
        liste.insertAdjacentHTML("beforeend", yeniSatir);

        // InputlarÄ± temizle
        ulkeInput.value = "";
        mevsimInput.value = "";
    });

    // Silme Fonksiyonu
    function sil(id) {
        // Ä°lgili ID'ye sahip satÄ±rÄ± bul ve kaldÄ±r
        const silinecekSatir = document.getElementById(`kayit-${id}`);
        if (silinecekSatir) {
            silinecekSatir.remove();
        }
    }
</script>

